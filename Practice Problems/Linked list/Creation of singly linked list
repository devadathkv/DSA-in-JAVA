
public class Main
{
    public static class Node{
        int data;
        Node next;
        Node(int data){
            this.data=data;
        }
    }
    
    public static class LinkedList{
        
        Node head=null;
        Node tail=null;
        
        void insertAtEnd(int data){
            Node newnode = new Node(data);
            if(head==null){
                head=newnode;
                tail=newnode;
            }
            else{
                tail.next=newnode;
                tail=newnode;
            }
        }
        
        void insertAtFront(int data){
            Node newnode = new Node(data);
            if(head==null){
                head=newnode;
                tail=newnode;
            }
            else{
                newnode.next=head;
                head=newnode;
            }
        }
        
        void insertAtposition(int data, int pos){
            Node newnode = new Node(data);
            Node temp=head;
            if(pos==0){
                insertAtFront(data);
            }
            else{
                for(int i=0;i<pos-1;i++){
                    temp=temp.next;
                }
                newnode.next=temp.next;
                temp.next=newnode;
            }
        }
        
        
        void deleteFront(){
            if(head==null){
                return;
            }
            else if(head.next==null){
                head=null;
                tail=null;
            }
            else{
                head=head.next;
            }
        }
        
        
        void deleteLast(){
            if(head==null){
                return;
            }
            else if(head.next==null){
                head=null;
                tail=null;
            }
            else{
                Node secondlast = head;
                Node last=head.next;
                while(last.next!=null){
                    last=last.next;
                    secondlast=secondlast.next;
                }
                secondlast.next=null;
            }
        }
        
        void deleteAtPos(int pos){
            if(pos==0){
                deleteFront();
            }
            else if(head.next==null){
                head=null;
                tail=null;
            }
            else{
                
            }
        }
        
        
        void display(){
            Node temp=head;
            while(temp!=null){
                System.out.print(temp.data+" ");
                temp=temp.next;
            }
        }
        
    }
    
    
	public static void main(String[] args) {
		LinkedList ll = new LinkedList();
		ll.insertAtEnd(4);
		ll.insertAtEnd(14);
		ll.insertAtEnd(24);
		ll.insertAtEnd(34);
		//ll.insertAtFront(1);
		ll.insertAtposition(100,2);
		ll.deleteFront();
		//ll.deleteLast();
		ll.deleteAtPos(2);
		ll.display();
	}
}
